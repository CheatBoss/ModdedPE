<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/moddedpe_nmod_news_root">

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/moddedpeNewsNModImage"
		android:layout_centerInParent="true"/>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#000000"
		android:id="@+id/moddedpeNewsNModTitleBG"
		android:alpha="0.5"
		android:layout_alignLeft="@id/moddedpeNewsNModImage"
		android:layout_alignRight="@id/moddedpeNewsNModImage">

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#DEDEDE"
			android:layout_alignParentLeft="true"
			android:maxLines="1"
			android:id="@+id/moddedpeTextViewNewsNModTitle"
			android:layout_margin="3dp"/>

	</RelativeLayout>

</RelativeLayout>


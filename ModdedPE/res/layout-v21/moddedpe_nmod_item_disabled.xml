<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:orientation="vertical"
	android:background="#FFFFFF"
	android:id="@+id/moddedpenmoditemdisabledRelativeLayout">

	<ImageView
		android:layout_height="90dp"
		android:layout_width="90dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:id="@+id/moddedpenmoditemdisabledImageView"/>

	<android.support.v7.widget.AppCompatTextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_toRightOf="@id/moddedpenmoditemdisabledImageView"
		android:layout_marginLeft="10dp"
		android:id="@+id/moddedpenmoditemdisabledTextViewTitle"/>

	<LinearLayout
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@id/moddedpenmoditemdisabledImageView"
		android:layout_width="wrap_content"
		android:layout_marginTop="50dp">

		<com.mcal.MCDesign.widget.MCDAddButton
			android:layout_height="45dp"
			android:layout_width="45dp"
			android:id="@+id/moddedpenmoditemdisabledAdjustButton"/>

		<com.mcal.MCDesign.widget.MCDAboutButton
			android:layout_height="45dp"
			android:layout_width="45dp"
			android:id="@+id/moddedpenmoditemdisabledButtonDescription"/>

	</LinearLayout>

</RelativeLayout>


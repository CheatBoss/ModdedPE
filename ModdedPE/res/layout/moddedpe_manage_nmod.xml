<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:visibility="gone"
		android:id="@+id/moddedpe_manage_nmod_layout_nmods">

		<ListView
			android:divider="@null"
			android:dividerHeight="0dip"
			android:layout_height="match_parent"
			android:id="@+id/moddedpe_manage_nmod_list_view"
			android:layout_width="match_parent"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:visibility="gone"
		android:id="@+id/moddedpe_manage_nmod_layout_no_found">

		<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:layout_width="325dp"
			android:layout_height="150dp"
			android:foreground="?android:attr/selectableItemBackgroundBorderless"
			card_view:cardCornerRadius="5dp"
			card_view:cardPreventCornerOverlap="true"
			card_view:cardUseCompatPadding="true"
			card_view:contentPadding="1dp"
			android:layout_centerInParent="true"
			android:id="@+id/moddedpe_manage_nmod_add_new_card_view">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="150dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:orientation="vertical"
					android:gravity="center">

					<android.support.v7.widget.AppCompatTextView
						android:layout_height="wrap_content"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:layout_width="wrap_content"
						android:text="@string/nmod_add_new"/>

					<android.support.design.widget.FloatingActionButton
						android:layout_height="50dp"
						android:layout_width="50dp"
						android:src="@drawable/ic_plus"
						android:id="@+id/moddedpe_manage_nmod_add_new"
						android:layout_centerInParent="true"
						android:layout_margin="10dp"/>

				</LinearLayout>
				

			</RelativeLayout>

		</android.support.v7.widget.CardView>

	</RelativeLayout>

</RelativeLayout>


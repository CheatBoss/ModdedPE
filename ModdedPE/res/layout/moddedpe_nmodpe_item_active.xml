<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:background="#FFFFFF"
	android:id="@+id/moddedpenmodpeitemactiveRelativeLayout">

	<ImageView
		android:layout_height="90dp"
		android:layout_width="90dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:id="@+id/moddedpenmodpeitemactiveImageView"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"/>

	<android.support.v7.widget.AppCompatTextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_toRightOf="@id/moddedpenmodpeitemactiveImageView"
		android:layout_marginLeft="10dp"
		android:id="@+id/moddedpenmodpeitemactiveTextViewTitle"/>

	<com.mcal.MCDesign.widget.MCDDownButton
		android:layout_height="90dp"
		android:layout_width="45dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:id="@+id/moddedpenmodpeitemactiveButtonDown"/>

	<com.mcal.MCDesign.widget.MCDUpButton
		android:layout_height="90dp"
		android:layout_width="45dp"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/moddedpenmodpeitemactiveButtonDown"
		android:id="@+id/moddedpenmodpeitemactiveButtonUp"/>

	<LinearLayout
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@id/moddedpenmodpeitemactiveImageView"
		android:layout_width="wrap_content"
		android:layout_marginTop="50dp">

		<com.mcal.MCDesign.widget.MCDCostButton
			android:layout_height="45dp"
			android:layout_width="45dp"
			android:id="@+id/moddedpenmodpeitemactiveAdjustButton"/>

		<com.mcal.MCDesign.widget.MCDAboutButton
			android:layout_height="45dp"
			android:layout_width="45dp"
			android:id="@+id/moddedpenmodpeitemactiveButtonDescription"/>

	</LinearLayout>

</RelativeLayout>

